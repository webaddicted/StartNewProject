<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:navigationBarColor">@color/colorAccent</item>-->
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:navigationBarColor">@color/colorAccent</item>-->
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_btn_corner</item>
        <item name="android:minHeight">@dimen/dp40</item>
        <item name="android:minWidth">@dimen/dp180</item>
        <item name="android:elevation">@dimen/dp10</item>
        <item name="android:paddingLeft">@dimen/dp13</item>
        <item name="android:paddingRight">@dimen/dp13</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_regular</item>
    </style>

    <style name="TextView_Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_color</item>
        <item name="colorControlNormal">@color/red</item>
    </style>
    <!--{START DIALOG STYLE WITH ANIMATION}-->
    <style name="AlertDialogStyle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/app_color</item>
        <item name="android:colorAccent">@color/app_color</item>
        <item name="android:textColorPrimary">@color/app_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogSlideUpAnimation</item>-->
    </style>


    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <!--{END DIALOG STYLE WITH ANIMATION}-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Separator_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">@color/gray_CDCDCD</item>
    </style>

    <!--    {START PINK STYLE}-->
    <style name="txt_pink_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_light</item>

    </style>

    <style name="txt_pink_normal">
        <item name="android:textAppearance">@style/TextAppearance_open_sans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="txt_pink_large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_bold</item>
    </style>
    <!--    {END PINK STYLE}-->
    <style name="txt_white_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_light</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="txt_white_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_regular</item>
    </style>
    <!--    {START BLACK STYLE}-->
    <style name="txt_black_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_light</item>
    </style>

    <style name="txt_black_normal">
        <item name="android:textAppearance">@style/TextAppearance_open_sans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="txt_black_normal_bold">
        <item name="android:textAppearance">@style/TextAppearance_open_sans_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--    {END BLACK STYLE}-->
    <!--    {START GRAY STYLE}-->
    <style name="txt_gray_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_light</item>
    </style>

    <style name="txt_gray_large_32">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp32</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_bold</item>
    </style>

    <style name="txt_gray_large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_semibold</item>
    </style>
    <!--    {END GRAY STYLE}-->

    <style name="TextAppearance_open_sans_regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance_open_sans_bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>
    <style name="TextAppearance_open_sans_light" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_light</item>

    </style>
    <style name="TextAppearance_open_sans_semibold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>
</resources>
